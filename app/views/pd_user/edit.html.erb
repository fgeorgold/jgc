<%= stylesheet_link_tag "pd_user" %>

<h2><%= @title %></h2>

<!-- Catch the errors and put the error messages on the screen. -->
<%= error_messages_for "pd_user" %>

<% form_for :pd_user do |form| %>
  <fieldset>
    <legend>Email</legend>
	
		
	<div class="form_row">
      <label for="email">Email:</label>
      <%= form.text_field :email,
                          :size => PDUser::EMAIL_SIZE,
                          :maxlength => PDUser::EMAIL_MAX_LENGTH %>
	</div>

	<div class="form_row">
      <%= submit_tag "Update", :class => "submit" %>
    </div>
	
  </fieldset>
<% end %>


<% form_for :pd_user do |form| %>
  <fieldset>
    <legend>Password</legend>
	
    <div class="form_row">
      <label for="current_password">Current password:</label>	  
      <%= form.password_field :current_password,
                              :size => PDUser::PASSWORD_SIZE,
                              :maxlength => PDUser::PASSWORD_MAX_LENGTH %>
    </div>
	
    <div class="form_row">
    <label for="password">New password:</label>
      <%= form.password_field :password,
                              :size => PDUser::PASSWORD_SIZE,
                              :maxlength => PDUser::PASSWORD_MAX_LENGTH %>
    </div>
	
    <div class="form_row">
      <label for="password_confirmation">Confirm new password:</label>
      <%= form.password_field :password_confirmation,
                              :size => PDUser::PASSWORD_SIZE,
                              :maxlength => PDUser::PASSWORD_MAX_LENGTH %>
    </div>
	
    <%= submit_tag "Update", :class => "submit" %>
  </fieldset>
<% end %>
