  <body>
  <a target="_blank" id="feedback-tab" href="userComment"></a>
  <img src="../images/JGC.gif" alt="John Gardner Center Logo" />
 
     
	
  <div id ="content">

		<div align="right">
			<table border="1">
				<tr>
					<td class="right">
						<%  if(@hDisplay)
								if(session[:user] && session[:user].admin && session[:user].affiliateOrg)
							    	concat "<a href = welcomeAdminUser >Home </a>"
								end
								if(session[:user] && session[:user].admin && !session[:user].affiliateOrg)
									concat "<a href = welcomeUser >Home </a>"
								end
								if(session[:user] && !session[:user].admin && session[:user].affiliateOrg)
									concat "<a href = welcomeOrgUser >Home </a>"
								end
								if(session[:user] && !session[:user].admin && !session[:user].affiliateOrg && !session[:user].activitesadmin)
									concat "<a href = welcomeUser >Home </a>"
								end
								if(session[:user] && session[:user].activitesadmin)
									concat "<a href = welcomeActivitiesAdmin >Home </a>"
								end
							end
							
						%>
						
						
					</td>
					<td class="right">
					<%	if(@orgUser)
				  			if (session[:user])
								concat "<a href = /user/logout> Logout </a>"
							else
				    			concat "<a href = /user/login> Organization Login </a>"
				  			end
						end
					%>
					
				</td>
			</tr>
			
			</table>
		</div>
