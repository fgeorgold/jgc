<div id="loginbox">
			<div class="copy">
				<p> Please enter information for the new organization below </p>
				<hr style="color:#CCC"/>
		  	</div>
			
			<div id ="content">
				<div id ="content">
				<% form_for(@Neworganization) do |f| %>
			    <%= f.error_messages %>

  				<p>
				    <%= f.label :name %><br />
    				<%= f.text_field :name,  :size => 20%>
  				</p>
  				<p>
    				<%= f.label :website %><br />
    				<%= f.text_field :website %>
  				</p>
  				<p>
    				<%= f.label :address %><br />
    				<%= f.text_field :address %>
  				</p>
  				<p>
    				<%= f.label :description %><br />
				    <%= f.text_area :description,:rows => 5 %>
  				</p>
  				<p>
			    <%= f.label :resources %><br />
    			<%= f.text_area :resources,:rows => 5 %>
  				</p>
  				<p>
    			<%= f.label :contact %><br />
    			<%= f.text_field :contact %>
  				</p>
  				<p>
    			<%= f.label :email %><br />
    			<%= f.text_field :email %>
  				</p>
  				<div id="partners">
				<%= link_to_function "Add a partner" do |page|
					page.insert_html :bottom, :partners, :partial => 'add_single_partner', :object => Partner.new
				end %>
  				</div>

    			<%= f.submit "Update" %>
  				</p>
				<% end %>
				
			</div>
			
				<p><label for="organization_asp"><b>Programs: </b></label><br/>
				
				<% @asps.each do |key,value| %>
					<%= h "#{value.program_name}" %><%= button_to 'Remove', :action => :RemoveASP, :controller => "user", :rowid => "#{key}", :orgId => @id %>
				<% end %>
				</p>
			
				<p><label for="organization_partner_attribute_partner_org_id"><b>Partners: </b></label><br/> 
				<br/> 
				<% @partners.each do  |key,value| %>
					<%= h "#{value.name}" %><%= button_to 'Remove', :action => :RemovePartner, :controller => "user", :rowid => "#{key}", :orgId => @id %>
				<% end %>
				</p>
			
			<%= link_to 'Show', @Neworganization %> |
			<%= link_to 'Back', organizations_path %>		  
		</div>
	  
		





