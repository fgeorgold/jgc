
<div class="title">
    <h1><%= @activity.name %><h1>
</div>

<div id="columns">

    <div id="left-column">
        <div id="profile-picture">
        </div>
        
        <div class="rating">
        </div>
        
        <div class="links">
            <ul>
                <li><a href="#">E-mail this</a></li>
                <% if !@activity.photos.empty? %>
                      <li><%= 'a href="#{GLOBALS::ACTIVITY_PATH}/#{@activity.id.to_s()}/#{activity.photos.first}" rel="lightbox[activity_photos]"' %>See photos</a></li>
                <% end %>
                <% if @activity.photos.length > 1 %>
                      <% (@activity.photos[2..-1]).each do |photo| %>
                           <%= link_to "", "#{GLOBALS::ACTIVITY_PATH}/#{@activity.id.to_s()}/#{photo.file_name}", :rel => "lightbox[activity_photos]" %>
                      <% end %>
                <% end %>
                <li><a href="#">Add to favorites</a></li>
            </ul>
        </div>        
    </div>

    <div id="right-column">
        <div class="section">
            <h2>Basic Info</h2>
            <table class="info-table">
                <tr><td class="info-name">Name:</td><td class="info-value"><%= @activity.name %></tr>
                <tr><td class="info-name">Description:</td><td class="info-value"><%= @activity.description %></tr>
                <tr><td class="info-name">Tagged as:</td><td class="info-value">
                    <% @activity.tags.each do |tag| %>
                    <%= tag.name %>
                    <% end %>
                </tr></td>
                <tr><td class="info-name">Age group:</td><td class="info-value"><%= @activity.age_group %></tr>
            </table>
        </div>
        
        <div class="section">
            <h2>Where & When</h2>
            <table class="info-table">
                <tr><td class="info-name">Time:</td><td class="info-value"></td></tr>
                <tr><td class="info-name">Location:</td><td class="info-value"><%= @activity.address %></td></tr>
            </table>
        </div>
        
        <div class="section">
            <h2>Resources & Costs</h2>
            <table class="info-table">
                <tr><td class="info-name">Cost:</td><td class="info-value"><%= @activity.cost %></td></tr>
            </table>
        </div>
    </div>
</div>

<div id = "photo_upload">
	<h3> Upload Photos </h3>
	<%if flash[:upload_success] %>
		<p style ="color:green"><%= flash[:upload_success]%></p>
	<%end%>
	<%if flash[:empty_photo] %>
		<p style = "color:red"><%= flash[:empty_photo] %></p>
	<%end%>
	<div class = "photo-form">
	<%form_for :photo_info, :url => {:action => :postPhoto}, :html =>{ :multipart => true } do |f| %>
		<%= f.hidden_field :activity_id, :value => "#{@activity.id}" %> 
		<%= f.file_field(:filename) %>
		<%= submit_tag "Upload" %>
	<%end%>
	</div>
</div>

<div id="comments">
<h3> Comments </h3>
    <div class="comment-list">
        <% @comments.each do |comment| %>
            <div class="comment">
                <div class="comment-head">
                    <h3><%= comment.email %></h3>
                </div>
                <div class="comment-body">
                    <%= comment.comment_text %>
                </div>
            </div>
        <% end %>
    </div>
    
    <div class="comment-form">
        <% form_for :new_comment, @new_comment, :url => { :action => "save_activity_comment" } do |f| %>
            
            <%= f.hidden_field :activity_id, :value => "#{@activity.id}" %> 
            <p>E-mail address:
            <%= f.text_field :email %>
            </p>
            <p>
            Comment:
            <%= f.text_field :comment_text %>
            </p>
            <%= submit_tag 'Submit' %>
            
        <% end %>
    </div>
    
</div>



<% form_for :activity, @activity, :url => activity_path(@activity), :html => { :id => "activity-form" } do |f| %>
    <%= f.hidden_field :name, :value => "ACTIVITY" %>
    <%= submit_tag "Update", :id => "activity-submit", :onclick => "return false;"  %>
<% end %>





