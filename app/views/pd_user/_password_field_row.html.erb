<!--
 Partial for the password field.
 This partial requires the form and field variables, and takes
 an optional field title variable which gets used to label the
 row if present; otherwise, we use field.humanize.
 -->
 
<% field_title = nil if not defined?(field_title) -%> 
<div class="form_row">
  <label for="<%= field %>">
    <%= field_title || field.humanize %>:
  </label>
  
  <%= form.password_field field, :size => PDUser::PASSWORD_SIZE,
                                 :maxlength => PDUser::PASSWORD_MAX_LENGTH %>
</div>