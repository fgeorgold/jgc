<%= stylesheet_link_tag "pd_user" %>	

<h2>Register</h2>
<% form_for :pd_user do |form| %>
  <fieldset>
    <legend>Enter Your Details</legend>
	
	<!-- Catch the errors and put the error messages on the screen. -->
    <%= error_messages_for "user" %>
		
	<div class="form_row">
      <label for="screen_name">Screen name:</label>
      <%= form.text_field :screen_name,
                          :size => PDUser::SCREEN_NAME_SIZE,
                          :maxlength => PDUser::SCREEN_NAME_MAX_LENGTH %>
    </div>
	
	<div class="form_row">
      <label for="email">Email:</label>
      <%= form.text_field :email,
                          :size => PDUser::EMAIL_SIZE,
                          :maxlength => PDUser::EMAIL_MAX_LENGTH %>
	</div>
	
	<div class="form_row">
      <label for="password">Password:</label>
      <%= form.password_field :password,
                              :size => PDUser::PASSWORD_SIZE,
                              :maxlength => PDUser::PASSWORD_MAX_LENGTH %>
    </div>
	
	<div class="form_row">
      <%= submit_tag "Register", :class => "submit" %>
    </div>
	
  </fieldset>
<% end %>